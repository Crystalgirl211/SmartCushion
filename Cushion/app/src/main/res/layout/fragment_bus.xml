<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2196F3"
        android:gravity="center"
        android:text="乘车"
        android:textColor="#FFFFFF"
        android:textSize="20sp"></TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#2196F3">

        <ImageView
            android:id="@+id/bus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="77dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/sao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="51dp"
            android:layout_marginStart="12dp"
            android:text="请扫描二维码选择目的站"
            android:textColor="#ffffff"
            android:textSize="19sp" />

        <ImageView
            android:layout_width="31dp"
            android:layout_height="30dp"
            android:layout_above="@+id/bus"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-46dp"
            android:layout_marginEnd="122dp"
            android:src="@drawable/currentsite" />

        <TextView
            android:id="@+id/currentSite"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:textColor="#EEEE00"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="31dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:layout_toLeftOf="@+id/purposeSite"
            android:src="@drawable/purposesite" />

        <TextView
            android:id="@+id/purposeSite"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:textColor="#EEEE00"
            android:textSize="20sp" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/push_rv"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
